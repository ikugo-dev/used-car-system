<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

  <persistence-unit name="carPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <class>com.cars.persistence.Automobil</class>
    <!-- Add more entity classes if needed -->

    <properties>
      <!-- SQLite DB path -->
      <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:used_cars.db"/>
      <property name="jakarta.persistence.jdbc.user" value=""/>
      <property name="jakarta.persistence.jdbc.password" value=""/>

      <!-- Hibernate config -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.SQLiteDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
