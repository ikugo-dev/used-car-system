<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
    xmlns="https://jakarta.ee/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        https://jakarta.ee/xml/ns/persistence
        https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="CarPU" transaction-type="JTA">
        <jta-data-source>java:app/jdbc/CarDS</jta-data-source>

        <class>com.project.persistence.Kupac</class>
        <class>com.project.persistence.Automobil</class>
        <!-- Add other @Entity classes here -->

        <properties>
            <!-- EclipseLink or Hibernate options can go here -->
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>
    </persistence-unit>
</persistence>
